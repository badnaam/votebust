<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <%= render :partial => '/layouts/scripts' %>
  <body>
    <div class="container" id="main_container">
      <div class="header span-24 last">
        <div class ="span-24 header_links_div last">
          <%= render :partial => "shared/cat_nav_list" %>
          <%= render :partial => "shared/city_nav_list" %>
          <div class="span-24 last"
               <div class="ui-corner-bl ui-corner-br ui-state-hover">
              <ul class="header_links">
                <% unless  current_user %>
                  <li><%= link_to "Sign Up", new_user_path, :id => 'main_sign_up_link', :class=> 'special-text'%></li>
                  <li><%= link_to "Login", login_path, :id => 'main_login_link' %></li>
                <% else %>
                  <li><%= link_to "New Vote", new_user_posted_vote_topic_path(current_user), :id => 'main_new_vote_link',  :class=> 'special-text' %></li>
                  <li><%= link_to current_user.username.titleize, current_user, :id => 'main_profile_link' %><span id="main_link_vote_power" class="vote-power" style="margin-left:.5em;">
                      <%= current_user.voting_power %> </span></li>
                  <li><%= link_to "Logout", logout_path  %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="last span-24 header_logo_div append-bottom"> <!-- header logo -->
          <div class="span-8">
            <%= link_to "", root_path, :class => "clearfix sprite logo-image"%>
            <span class="logo_msg"><%= t 'site_logo_msg' %></span>
            <a href="intro-prezo-trig" class="special-text bld" id="" rel="#intro_prezo">
              <%= t ('site_learn_more') %>
            </a>
          </div>
          <div class="span-24 last nav_container ui-state-default prepend-top">
            <div class="main_links_div span-18">
              <%= render_navigation :level => 1 %>
            </div>
            <div class="span-6 last div-search-form"
            <% form_tag searches_path, :method => :get, :class => '', :id => "search_form" do %>
              <%= text_field_tag :q, cookies[:voteable_q].nil? ? "Search" : cookies[:voteable_q],  :class => 'search-term' %>
                   <span class=small-button><%= link_to "Search", "#", :id => 'search_button' %></span>
                   <% end  %>
            </div>
          </div>
        </div>
      </div>

      <div class ="span-24 last content_container">
        <div class="span-24 last">
          <%= yield :page_headers %>
        </div>

        <div class="content span-24 last" id="content">
          <div class="span-18 last" id="flash_messages">
            <%= render :partial => 'layouts/flash_msg' %>
          </div>
          <%= yield %>
        </div> <!-- end content div -->
      </div> <!-- end content_container -->
    </div>
    <%= render :partial => "/shared/intro_prezo" %>
    <%= render :partial => "/layouts/footer" %>
  </body>
</html>
