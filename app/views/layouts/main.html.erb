<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <%= render :partial => '/layouts/scripts' %>
  <body>
    <div class="container" id="main_container">
      <div class="header span-24 last">
        <div class ="span-24 header_links_div last">
          <%= render :partial => "category/cat_nav_list" %>
          <div class="span-24 last"
               <div class="ui-corner-bl ui-corner-br ui-state-hover">
              <ul class="header_links">
                <%# cache(@current_user_session) do %>
                  <% unless  current_user %>
                    <li><%= link_to "Sign Up", new_user_path, :id => 'main_sign_up_link', :class=> 'special-text'%></li>
                    <li><%= link_to "Login", login_path, :id => 'main_login_link' %></li>
                  <% else %>
                    <li><%= link_to "New Vote", new_user_vote_topic_path(current_user), :id => 'main_new_vote_link',  :class=> 'special-text' %></li>
                    <li><%= link_to current_user.username.titleize, current_user, :id => 'main_profile_link' %></li>
                    <li><%= link_to "Logout", logout_path  %></li>
                  <% end %>
                <%# end  %>
              </ul>
            </div>
          </div>
        </div>
        <div class="last span-24 header_logo_div"> <!-- header logo -->
          <%= link_to image_tag ('/images/logo.png'), root_path %>
          <span class="logo_msg"><%= t 'site_main_msg' %><sup>&trade;</sup></span>
          <div class="span-24 last nav_container ui-state-default">
            <div class="span-24 last">
              <div class="main_links_div">
                <%= render_navigation :level => 1 %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class ="span-24 last content_container">
        <div class="span-24 last">
          <%= yield :page_headers %>
        </div>
        <div class="span-22 prepend-1 last">
          <%= yield :page_top %>
          <% unless @header_exempt_page %>
            <%= render :partial => 'layouts/page_header' %>
          <% end  %>
        </div> <!-- end search yield -->
        <div class="content span-18  bordered" id="content">
          <div class="span-18 last" id="flash_messages">
            <%= render :partial => 'layouts/flash_msg' %>
          </div>
          <div class="span-18 last">
            <div class="crumb ui-widget-header   normal-pad right-mar">
              <% unless controller.controller_name == 'home' && controller.action_name == 'index' %>
                <%= render_navigation :renderer => :breadcrumbs, :join_with => "&nbsp;&gt;&nbsp;" %>
              <% end  %>
            </div>
          </div>
          <%= yield %>
        </div> <!-- end content div -->

        <div class="right_nav span-6 last">
          <div class="span-6 last div-search-form"
          <% form_tag searches_path, :method => :get, :class => 'right', :id => "search_form" do %>
            <%= text_field_tag :search_term, "Search",  :class => 'search-term' %>
                 <span class=small-button><%= link_to "Search", "#", :id => 'search_button' %></span>
                 <% end  %>
          </div>
          <%= yield :right_nav %>
        </div>
        <!-- <div class="push"> </div>-->
      </div> <!-- end content_container -->
      <%= render :partial => "/layouts/footer" %>
    </div>
  </body>
</html>
