<% if !flash.nil? %>
  <% if flash[:notice] %>
  <script type="text/javascript">
      //<![CDATA[
      showFlash("<%= flash[:notice] %>", "flash-notice");
      //]]>
    </script>
  <% end  %>
  <% if flash[:success] %>
  <script type="text/javascript">
      //<![CDATA[
      showFlash("<%= flash[:success] %>", "flash-success");
      //]]>
    </script>

  <% end  %>
  <% if flash[:error] %>
  <script type="text/javascript">
      //<![CDATA[
      showFlash("<%= flash[:error] %>", "flash-error");
      //]]>
    </script>
  <% end  %>
<% end  %>
