<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
  <% unless (yield :title).blank? || (yield :title) == t("logo") %>
    <% @title = t("logo") + " " + (yield :title) %>
  <% else %>
    <% @title = t("logo") %>
  <% end  %>
  <title><%= @title %> </title>

  <%#= stylesheet_link_tag "screen", "custom", "formtastic", "formtastic_changes","/stylesheets/css/bb/jquery-ui-1.8.2.custom.css", :cache => "base" %>
  <%= stylesheet_link_tag "screen", "custom", "formtastic", "jquery-ui-1.8.2.custom.css", :cache => "base" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  
