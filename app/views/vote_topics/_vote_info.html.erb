<%  if local_assigns[:preview].nil?
  preview = nil
end
%>
<%  if local_assigns[:toolbar].nil?
  toolbar = nil
end
%>

<table class="vote-info-table">
  <tr>
    <td rowspan="2" class="right-border">
      <%= render :partial => "/shared/ubox", :locals => {:user => vt.poster, :anon => vt.anon} %>
    </td>
    <td class="right-border">
      <span class="small bld" id="">
        <span class="ui-icon ui-icon-tag "></span>
        <%= link_to "#{vt.category.name}, ", category_vote_topics_path(vt.category.to_param) %>
        <%= link_to "#{vt.poster.city.titleize}, ", city_vote_topics_path(vt.poster.city, :order => 'distance') %>
        <%= link_to "#{vt.poster.state.titleize}", state_vote_topics_path(vt.poster.state, :order => 'recent') %>
      </span>
    </td>
    <td>
      <span class="ui-state-normal">
        <span class="ui-icon ui-icon-bullet vam" id=""> </span>
        <span class=" small-pad" id="">
          <%= "#{vt.votes_count} votes"  %>
        </span>
      </span>
      <span class="ui-state-normal">
        <span class="ui-icon ui-icon-bullet vam" id=""> </span>
        <span class="small-pad tracking-count" id="">
          <%= vt.trackings_count %> trackings
        </span>
        <%= render :partial => "/shared/tracking_tooltip" %>
      </span>
      <span class="go-right"><%= flags vt %></span>
    </td>
  </tr>
  <tr>
    <td class="right-border">
      <span class="ui-state-normal">
        <span class="ui-icon ui-icon-bullet vam" id=""> </span>
        <span class="small">Started : <%= vt.created_at.strftime('%b %d %Y') %></span>
        <% if vt.expires %>
          <span class="ui-icon ui-icon-bullet vam" id=""> </span>
          <% if vt.expires > DateTime.now %>
            <span class="small" id=""> Ends :
              <%= vt.expires.strftime('%b %d %Y') %>
            </span>
          <% else %>
            <span class="small" id=""> Ended :
              <%= vt.expires.strftime('%b %d %Y') %>
            </span>
          <% end  %>
        <% end  %>
      </span>
    </td>
    <td>
      <% if preview %>
        <%= link_to "More..", vt, :class => "go-right bld" %>
      <% else %>
        <div>
          <% if current_user %>
            <span class="go-right" id="tracking"><span class="ui-icon ui-icon-heart"></span>
              <% if (t = @vote_topic.is_being_tracked? current_user.id) %>
                <a href="<%= tracking_path(t, :vt_id => @vote_topic.id) %>" id="track_link" class="untrack">
                  Untrack
                </a>
              <% else %>
                <a href="<%= trackings_path(:vt_id => @vote_topic.id) %>" class="" id="track_link" class="track">
                  Track
                </a>
              <% end %>
            </span>
            <%= render :partial => "/shared/add_tracking_tooltip" %>
          <% end %>
        </div>
      <% end  %>
    </td>
  </tr>
  <% if toolbar == true %>
    <tr>
      <td></td>
      <td colspan="2" class="ui-state-default">
        <%= link_to "Edit", scoped_edit_vote_topic_path(vt.category, vt) %>
        <span class="go-right">Status : <%= status_str vt.status %></span></td>
    </tr>
  <% end  %>
</table>