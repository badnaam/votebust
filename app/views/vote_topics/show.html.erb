<% if @preview %>
  <%= render :partial => "prev" %>
<% elsif  @approved%>
  <%= render :partial => "vote" %>
  <% content_for :right_nav do %>
    <% if @related.total_entries > 0 %>
      <%= render :partial => "/layouts/vote_side_bar", :locals => {:votes => @related, :header => "Related"} %>
    <% end  %>
    <% if @same_user.total_entries > 0 %>
      <%= render :partial => "/layouts/vote_side_bar", :locals => {:votes => @same_user, :header => "More from #{@vote_topic.user.username}"} %>
    <% end  %>
  <% end  %>
<% elsif @waiting %>
<% end  %>


