<div class="vote_item">
  <% f.semantic_fields_for :vote_items, vote_item, :child_index =>
    (vote_item.new_record? ? "index_to_replace_with_js" : nil) do |f| %>
    <%= f.input :option, :input_html => {:style => "width:60%" }, :hint => "Option to vote on." %>
  <%= link_to_function "Remove", "$(this).parent('.vote_item').remove()" %>
  <% end %>
</div>