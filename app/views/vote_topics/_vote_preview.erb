<% if local_assigns[:vi].nil? %>
  <% vi = vt.vote_items if !vt.nil? %>
<% end  %>
<% if local_assigns[:toolbar].nil? %>
  <% toolbar = false %>
<% end  %>

<% if !vt.nil? %>
  <div class="ui-widget-vote-preview bottom-mar normal-pad top-mar" style="clear:both" id="<%= vt.id%>">
    <table class="vote-info-table-top" id="">
      <tr>
        <td class="right-border" style="width:30%">
          <%= render :partial => "/shared/ubox", :locals => {:user => vt.poster, :anon => vt.anon} %>
        </td>
        <td style="width:70%">
          <blockquote class="preview">
            <span class="big"><%= link_to vt.header, scoped_vote_topic_path(vt.category, vt) %></span>
          </blockquote>
          <span class="go-right"><%= flags vt %></span>
        </td>
      </tr>
    </table>
    <div class="" id="">
      <%= render :partial => 'vote_topics/vote_info', :locals => {:vt => vt, :toolbar => toolbar} %>
    </div>
  </div>
<% end  %>

