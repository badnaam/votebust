<% listing_type = request.parameters['type'] %>
<% if !@vote_topics && @vote_topics.size > 0 %>
  $("#widget_<%=listing_type%>").append("<%= escape_javascript (render :partial => '/shared/simple_vote_list', :locals => {:coll => @vote_topics, :coll_type => 'vote_topic'}) %>");
<% else %>
  $("#widget_<%=listing_type%>").parent('.widget-div').parent().remove();
<% end  %>