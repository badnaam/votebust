  function showLoading(elem) {
    $j(elem).animate({opacity:1.0}, 'slow', function(){});
    $j(elem).next('div').animate({
      opacity: 0.3
    }, 'slow', function() {
    });
  }

  function hideLoading(elem) {
    $j(elem).animate({opacity:0.0}, 'slow', function(){});
    $j(elem).next('div').animate({
      opacity: 1.0
    }, 'slow', function() {
    });
