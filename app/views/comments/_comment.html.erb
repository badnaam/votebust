<div id="comment" class="append-bottom ui-widget-content normal-pad">
  <% if !comment.nil? %>
    <div>
      <ul class="sidebox-list-inline profile-list-avataar">
       <%= get_user_icon_image_link(comment.user) %>
        <li><em>
          <% if @vote_topic%>
            <% what = @vote_topic.what_user_voted_for(comment.user) %>
            <%= "(Voted for - #{what})" if !what.nil? %>
          <% end  %></em>
        </li>
      </ul>
      <hr/>
      <p>
        <%= comment.body %>
      </p>
    </div>
  <% end  %>
</div>