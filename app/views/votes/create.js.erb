<%= render :partial => 'layouts/flash_js_msg' %>
$('#selected_response_for_comment').val('<%= request.parameters['response'] %>');

$('.vote-stat').hide();
$('.vote-stat').html("<%= escape_javascript(render :partial => '/vote_topics/vote_form', :locals => {:selected_response => request.parameters['response'],
    :vt => VoteTopic.find_for_stats(request.parameters[:id], request.parameters[:category])})%>");
$('#comment_add').button({icons:{primary:'ui-icon-comment'}}).click(function(){
var sPath = window.location.pathname;
var sPage = sPath.substring(sPath.lastIndexOf('/') + 1);
location.href = sPage+"#"+"comment_form"
$("#comment_body").focus();

});
$('.vote-stat').toggle('slow');
