<script type="text/javascript">
  //<![CDATA[
  $(document).ready(function(){
    $('#tabs').tabs( {spinner:"<img src='/images/loading.gif'/>", select:function(event, ui){$('#tabs').animate({opacity:.3}, 'slow', function() {});},
      ajaxOptions:{error:function(xhr, status,index, anchor){$(anchor.hash).html("Couldn't load this tab. We'll try to fix this as soon as possible.");
        },  dataType:'script', success:function(){
          //$('#loading').hide();
          $('#tabs').animate({opacity:1.0}, 'slow', function() {});
        }
        }});
  });
  //]]>
</script>

<div id="top_tab_container" class="span-18 last rel-pos">
  <div id ="loading" class="home-loading" style="display:none">
    <div class ="loading-inner-top">
    </div>
  </div>
  <div id="tabs" class="normal-pad  ui-widget-content">
    <ul>
      <li><a  href="<%= url_for(:controller => :vote_topics, :action => :index, :listing_type => "top")%>"><span>Most Voted</span></a></li>
      <% if current_user %>
        <li><a   href="<%= url_for(:controller => :vote_topics, :action => :index, :listing_type => "local")%>"><span>Near You <%= current_user.zip %></span></a></li>
        <li><a   href="<%= url_for(:controller => :vote_topics, :action => :index, :listing_type => "tracked")%>"><span>You are Tracking</span></a></li>
      <% end  %>
      <li><a href="<%= url_for(:controller => :vote_topics, :action => :index, :listing_type => "most_tracked") %>"><span>Most Tracked</span></a></li>
    </ul>
  </div>
</div>
<% content_for :right_nav do %>
  <%= render :partial => "latest_votes" %>
  <%= render :partial => "unan_votes" %>
