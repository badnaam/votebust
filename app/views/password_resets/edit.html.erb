<script type="text/javascript">
  //<![CDATA[

  $(document).ready(function(){
    $('#reset_pwd').button({icons:{primary:'ui-icon-key'}}).click(function(){
      $('#reset_form').submit();
      return false;
    });
  });
  //]]>
</script>
<div class="span-24 last" id="">
  <div class="ui-widget-content normal-pad prepend-top right-mar" id="">
    <h4 class="ui-widget-header">
      Change your Password
    </h4>

    <% form_for @user, :url => password_reset_path, :html => {:class => "formtastic", :method => :put, :id => "reset_form"} do |f| %>
      <%= f.error_messages %>
      <fieldset class="inputs">
        <ol class="" id="">

          <li class="string optional">
            <%= f.label "New Password" %>
            <%= f.password_field "password", :style => "width:20%" %>
          </li>
          <li class="string optional">
            <%= f.label "Confirm Password" %>
            <%= f.password_field "password_confirmation", :style => "width:20%" %>
          </li>
        </ol>
        <span class="small-button"><button id="reset_pwd">Reset Password and Login</button></span>
      </fieldset>
    <% end  %>
  </div>
</div>
<div class="push" id="">

</div>